<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient"
    android:gravity="center">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:adjustViewBounds="true"
        android:src="@drawable/kon3awnan_white_logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="@drawable/edittxt_bg_cornered">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_marginStart="10dp"
                android:src="@drawable/profile_icn"/>

            <EditText
                android:id="@+id/nameET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@android:color/transparent"
                android:typeface="monospace"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:textColorHint="@color/accent"
                android:hint="إسم الحاج"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittxt_bg_cornered">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:adjustViewBounds="true"
                android:src="@drawable/email_icn"
                android:tint="@color/secondary_text"/>

            <EditText
                android:id="@+id/emailET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@android:color/transparent"
                android:typeface="monospace"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:textColorHint="@color/accent"
                android:hint="البريد الإلكترونى"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittxt_bg_cornered">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:adjustViewBounds="true"
                android:src="@drawable/lock_icn"/>

            <EditText
                android:id="@+id/passET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@android:color/transparent"
                android:typeface="monospace"
                android:inputType="textPassword"
                android:gravity="end"
                android:textColor="@android:color/white"
                android:textColorHint="@color/accent"
                android:textSize="14sp"
                android:hint="كلمة المرور"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittxt_bg_cornered">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:adjustViewBounds="true"
                android:src="@drawable/mobile_icn"/>

            <EditText
                android:id="@+id/mobileET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@android:color/transparent"
                android:typeface="monospace"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:textColorHint="@color/accent"
                android:hint="رقم الهاتف"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittxt_bg_cornered">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:adjustViewBounds="true"
                android:src="@drawable/certificate_icn"/>

            <EditText
                android:id="@+id/statementNoET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@android:color/transparent"
                android:typeface="monospace"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:textColorHint="@color/accent"
                android:hint="الرقم القومى"/>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="تسجيل الحساب"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        android:typeface="monospace"
        android:background="@drawable/btn_gradient"/>

    <Button
        android:id="@+id/goToLoginBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:text="Have an account? Login now"
        android:textAllCaps="false"
        android:textSize="17sp"
        android:textColor="@android:color/white"
        android:typeface="monospace"
        android:background="@android:color/transparent"/>


</LinearLayout>